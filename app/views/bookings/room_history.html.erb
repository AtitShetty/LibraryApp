<H1> These are the bookings for this room</H1>

<div class="roomHistory">

  <p> Upcoming Bookings</p>
  <table>
    <thead>
    <tr>
      <th>Booking ID</th>
      <th>User Id.</th>
      <th>Room No.</th>
      <th>Check In Time</th>

      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @upcomingbooking.each do |upcomingbooking| %>
        <tr>
          <td><%= upcomingbooking.id %></td>
          <td><%= upcomingbooking.userid %></td>
          <td><%= upcomingbooking.room_no %></td>
          <td><%= upcomingbooking.intime.strftime('%m/%d/%Y %H:%M') %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <p> Past Bookings</p>
  <table>
    <thead>
    <tr>
      <th>Booking ID</th>
      <th>User Id.</th>
      <th>Room No.</th>
      <th>Check In Time</th>

      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @pastbooking.each do |pastbooking| %>
        <tr>
          <td><%= pastbooking.id %></td>
          <td><%= pastbooking.userid %></td>
          <td><%= pastbooking.room_no %></td>
          <td><%= pastbooking.intime.strftime('%m/%d/%Y %H:%M') %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <p> Cancelled Bookings</p>
  <table>
    <thead>
    <tr>
      <th>Booking ID</th>
      <th>User Id.</th>
      <th>Room No.</th>
      <th>Check In Time</th>

      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @deletedbooking.each do |deletedbooking| %>
        <tr>
          <td><%= deletedbooking.id %></td>
          <td><%= deletedbooking.userid %></td>
          <td><%= deletedbooking.room_no %></td>
          <td><%= deletedbooking.intime.strftime('%m/%d/%Y %H:%M') %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>