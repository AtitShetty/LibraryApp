<H1> These are the bookings for this room</H1>

<div class="roomHistory">

  <table>
    <thead>
    <tr>
      <th>Booking ID</th>
      <th>Room No.</th>
      <th>Check In Time</th>

      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @booking.each do |history| %>
        <tr>
          <td><%= history.id %></td>
          <td><%= history.room_no %></td>
          <td><%= history.intime.strftime('%m/%d/%Y %H:%M') %></td>
          <td><%= link_to 'Cancel Booking', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        </tr>
    <% end %>
    </tbody>
  </table>
</div>