<h1>Available booking/s</h1>
<% bookings = @return_params %>
<%- #Show available slots and give option to book -%>
<% if bookings.size > 0 %>
<table>
  <tr>
    <th>Room Number</th>
    <th>Room Size</th>
    <th>Location</th>
    <th>Date</th>
    <th>Time</th>
  </tr>
  <% bookings.each do |data| %>
      <tr>
        <td><%= data[2] %></td>
        <td><%= data[4] %></td>
        <td><%= data[3] %></td>
        <td><%= data[0] %></td>
        <td><%= data[1]+":00" %></td>
        <td><%= link_to 'Book this room', create_bookings_path(:time => data[1], :date => data[0], :room_no => data[2]), :method => "post" %></td>
      </tr>
  <% end %>
    <% else %>
    There are no bookings matching your criteria.
  <% end %>
</table>


