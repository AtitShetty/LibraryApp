<p id="notice"><%= notice %></p>


<h1>Upcoming Bookings</h1>

<table>
  <thead>
  <tr>
    <th>BookingID</th>
    <th>UserID</th>
    <th>RoomNo</th>
    <th>In Time</th>

    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @upcomingbooking.each do |booking| %>
      <tr>
        <td><%= booking.id %></td>
        <td><%= booking.userid %></td>
        <td><%= booking.room_no %></td>
        <td><%= booking.intime %></td>
      </tr>
  <% end %>
  </tbody>
</table>

