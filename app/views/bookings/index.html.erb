<p id="notice"><%= notice %></p>


<h1>Bookings</h1>

<table>
  <thead>
  <tr>
    <th>UserID</th>
    <th>RoomNo</th>
    <th>In Time</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.userid %></td>
        <td><%= booking.room_no %></td>
        <td><%= booking.intime %></td>
        <td><%= booking.booking_status %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', root_path+"bookings/edit/"+booking['id'].to_s %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
  <% end %>
  </tbody>
</table>


<%= render 'searchform', booking: @booking %>


